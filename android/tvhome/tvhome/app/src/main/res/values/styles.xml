<resources>

    <style name="VerticalGridView" >
        <item name="android:paddingBottom">?attr/browsePaddingBottom</item>
        <item name="focusOutFront">true</item>
        <item name="focusOutEnd">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="AppTheme.Row.Header" parent="Widget.Leanback.Row.Header">
        <item name="android:textAppearance">@style/TextAppearance.Leanback.Row.Header</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">0dp</item>>
    </style>

    <style name="tv_text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/tv_text</item>
    </style>


    <style name="KeyboardBtn">
        <item name="android:background">@drawable/key_btn_bg</item>
        <item name="android:textColor">@color/tv_seach_button_text</item>
        <item name="android:textSize">21dp</item>
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="KeyboardBtnLight" parent="@style/KeyboardBtn">
        <item name="android:background">@drawable/key_btn_bg</item>
    </style>

    <style name="KeyboardNumberBtn" parent="@style/KeyboardBtn">
        <item name="android:textSize">27dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>


    <style name="BaseTag" parent="@style/TextPadding">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BaseTag.Round">
        <item name="android:background">@drawable/list_item_bg</item>
    </style>


    <style name="TextPadding">
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

</resources>
